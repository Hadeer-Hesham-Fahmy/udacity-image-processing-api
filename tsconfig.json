{
  "compilerOptions": {
 
    "target": "es6",                                    
    "lib": ["ES2020", "DOM"],                           
    "module": "commonjs",                              
  
    "outDir": "./dist",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "noImplicitAny": true,                             
    "strictFunctionTypes": true,                       
    "noImplicitReturns": true,                         
    "skipLibCheck": true                               
  },
  "exclude": ["node_modules", "tests", "dist", "spec"]
}
